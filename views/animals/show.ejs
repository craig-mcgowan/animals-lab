<%- include("../partials/head.ejs")  %>

<body>
  <%- include("../partials/header.ejs")  %>
  <% const {species, extinct, location, lifeExpectancy}= animal  %>
  <h2><%= species %></h2>

  Is it extinct? <%= extinct? "yes" : "no" %> 
  <br>
  Location: <%= location %>
  <br>
  Life Expectancy: <%= lifeExpectancy %> years
  <br>

  <a href="/animals"><button>View All Animals</button></a>
  <br>
  <a href="/animals/<%=animal._id%>/edit"><button>Edit this Entry</button></a>
  <form action="/animals/<%=animal._id%>?_method=DELETE" method="POST">
    <input type="submit" value="Delete this Animal">
  </form>

  
</body>